{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/ui/*": [
        "./src/components/ui/*"
      ],
      "@/components/common/*": [
        "./src/components/common/*"
      ],
      "@/components/ErrorBoundary": [
        "./src/components/ErrorBoundary"
      ],
      "@/components/LoadingSpinner": [
        "./src/components/LoadingSpinner"
      ],
      "@/components/Avatar": [
        "./src/components/Avatar"
      ],
      "@/components/AlertList": [
        "./src/components/AlertList"
      ],
      "@/components/ForgotPassword": [
        "./src/components/ForgotPassword"
      ],
      "@/components/ForgotPassword/*": [
        "./src/components/ForgotPassword/*"
      ],
      "@/components/PasswordReset": [
        "./src/components/PasswordReset"
      ],
      "@/components/PasswordReset/*": [
        "./src/components/PasswordReset/*"
      ],
      "@/components/SignupForm": [
        "./src/components/SignupForm"
      ],
      "@/components/SignupForm/*": [
        "./src/components/SignupForm/*"
      ],
      "@/components/SubmitPost": [
        "./src/components/SubmitPost"
      ],
      "@/components/SubmitPost/*": [
        "./src/components/SubmitPost/*"
      ],
      "@/components/Comment": [
        "./src/components/Comment"
      ],
      "@/components/Comment/*": [
        "./src/components/Comment/*"
      ],
      "@/components/Quotes": [
        "./src/components/Quotes"
      ],
      "@/components/Quotes/*": [
        "./src/components/Quotes/*"
      ],
      "@/components/PostChat/*": [
        "./src/components/PostChat/*"
      ],
      "@/components/Chat/*": [
        "./src/components/Chat/*"
      ],
      "@/components/*": [
        "./src/components/*",
        "./src/app/components/*"
      ],
      "@/components/SubHeader": [
        "./src/components/SubHeader"
      ],
      "@/components/BuddyList": [
        "./src/components/BuddyList"
      ],
      "@/components/BuddyList/*": [
        "./src/components/BuddyList/*"
      ],
      "@/components/UserPosts": [
        "./src/components/UserPosts"
      ],
      "@/components/UserPosts/*": [
        "./src/components/UserPosts/*"
      ],
      "@/components/Icons": [
        "./src/components/Icons"
      ],
      "@/components/Icons/*": [
        "./src/components/Icons/*"
      ],
      "@/components/Chat": [
        "./src/components/Chat"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/store/*": [
        "./src/store/*"
      ],
      "@/graphql/*": [
        "./src/graphql/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/config/*": [
        "./src/config/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/context/*": [
        "./src/context/*"
      ],
      "@/constants/*": [
        "./src/constants/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "jest.setup.js"
  ],
  "types": [
    "jest",
    "@testing-library/jest-dom"
  ],
  "exclude": [
    "node_modules"
  ]
}