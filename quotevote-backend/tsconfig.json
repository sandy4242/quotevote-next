{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"]
    },
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"]
  },
  "include": ["app/**/*.ts", "app/**/*.js", "__tests__/**/*.ts", "__tests__/**/*.js", "jest.setup.ts"],
  "exclude": ["dist", "node_modules"],
}
